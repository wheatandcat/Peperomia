{
  "compilerOptions": {
    "types": [
      "jest",
      "node",
      "jasmine"
    ],
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react-native",
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "containers/*": [
        "src/containers/*"
      ],
      "lib/*": [
        "src/lib/*"
      ],
      "img/*": [
        "src/img/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "domain/*": [
        "src/domain/*"
      ],
      "config/*": [
        "src/config/*"
      ],
      "__mockData__/*":[
        "src/__mockData__/*"
      ],
      "queries/*":[
       "src/queries/*"
      ],
      "storyBookUtils/*":[
        "src/storyBookUtils/*"
      ]
    },
    "lib": [
      "es2015"
    ],
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
   "exclude": ["node_modules", "**/*.js", "**/*.jsx"]
}
