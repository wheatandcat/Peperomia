{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "baseUrl": "./",
    "lib": [
      "es2015"
    ],
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    "strict": true,
    "declaration":true,
    "skipLibCheck": true,
    "outDir": "./build/"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}